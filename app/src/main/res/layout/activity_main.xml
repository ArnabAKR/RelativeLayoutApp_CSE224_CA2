<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8E74F"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Form"
        android:textSize="30sp"
        android:textColor="#F44336"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:text="Name:"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/RegNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:text="Reg. no.:"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/RegNo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:text="Section:"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/Branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Section"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="21dp"
        android:text="Branch:"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/inputName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="30"
        android:layout_toRightOf="@id/Name"
        android:layout_marginTop="80dp"
        android:inputType="textPersonName"
        android:hint="Enter your name"
        android:textColor="#F44336"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/inputRegNo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/RegNo"
        android:layout_below="@+id/inputName"
        android:layout_marginTop="0dp"
        android:ems="30"
        android:hint="Enter your registration no."
        android:inputType="text"
        android:textColor="#F44336"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/inputSection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Section"
        android:layout_below="@+id/inputRegNo"
        android:layout_marginTop="0dp"
        android:ems="30"
        android:hint="Enter your Section"
        android:inputType="text"
        android:textColor="#F44336"
        android:layout_marginLeft="5dp"/>
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/Branch"
        android:layout_below="@+id/inputSection"
        android:paddingLeft="10dp">
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CSE"
            android:checked="false"
            android:padding="5dp"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IT"
            android:checked="false"
            android:padding="5dp"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ECE"
            android:checked="false"
            android:padding="5dp"
            android:textSize="18sp"/>

    </RadioGroup>
    <TextView
        android:id="@+id/PrgrmLang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogroup"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:text="Programming Languages:"
        android:textColor="#F44336"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_below="@+id/radiogroup"
        android:layout_toRightOf="@id/PrgrmLang"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox1"
        android:layout_toRightOf="@id/PrgrmLang"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C++"
        android:textSize="18sp"/>

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox2"
        android:layout_toRightOf="@id/PrgrmLang"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Python"
        android:textSize="18sp" />

     <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_below="@id/checkBox3"
        android:layout_marginTop="20dp"
        android:text="Submit"
        android:layout_marginLeft="40dp"
         android:paddingLeft="30dp"
         android:paddingRight="30dp"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkBox3"
        android:layout_toRightOf="@id/button1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Reset"
        android:textAllCaps="false" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button1"
        android:id="@+id/out"/>
</RelativeLayout>